<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:background="@drawable/bacg_main"
        android:scaleType="matrix" />

    <Button
        android:id="@+id/continueButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="goTo"
        android:text="@string/continueStr"
        android:textAllCaps="false"
        android:textColor="@color/main_text_col"
        android:textSize="18sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/miniGamesButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newGameButton"
        android:layout_alignStart="@+id/newGameButton"
        android:layout_below="@+id/newGameButton"
        android:layout_marginTop="21dp"
        android:onClick="goTo"
        android:text="@string/miniGamesStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
        android:textColor="@color/main_text_col"
        android:textSize="18sp" />

    <Button
        android:id="@+id/newGameButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/continueButton"
        android:layout_alignStart="@+id/continueButton"
        android:layout_below="@+id/continueButton"
        android:layout_marginTop="16dp"
        android:onClick="goTo"
        android:text="@string/newGameStr"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
        android:textColor="@color/main_text_col"
        android:textSize="18sp" />

</RelativeLayout>